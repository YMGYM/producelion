<div class="container intro">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div style="border-radius:50%;background-image:url('<%= asset_path @item.img%>'); background-size: cover; background-position: 50%">
                <div class="lookImg"></div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2 col-md-offset-4">
            <label>Item</label>
            <h3 class="labelH" style="text-shadow:0px 2px 10px black"><%=@item.name%></h3>
        </div>
        <div class="col-md-2">
            <label>TeamName</label>
            <h3 class="labelH" style="text-shadow:0px 2px 10px black"><%=@item.teamName%></h3>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-4 col-md-offset-4" style="overflow:hidden">
            <label>URL</label>
            <h3 class="labelH"><a href="<%=@item.url%>"><%=@item.url%></a></h3>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <label>TeamMemver</label>
            <% memberAry = []  %>
            <% memberAry = @item.member %>
            <% memberAry.each do |m| %>
            <h3 class="labelH" style="text-shadow:0px 2px 10px black"><%=m%></h3>
            <%end%>
        </div>
    </div>
</div>

